@model MazOrganization.ViewModels.Dashboard.ReferralsViewModel
@{
    ViewData["Title"] = "مشاهده معرف";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">مشاهده معرف</h1>
    <a asp-action="EditReferrals" asp-route-departmentId="@ViewData["id"]" asp-controller="Referral" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        ویرایش معرف
    </a>
</div>

<div>
    <div>

        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" readonly class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NationalNumber" class="control-label"></label>
                <input asp-for="NationalNumber" readonly class="form-control" />
                <span asp-validation-for="NationalNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" readonly class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" readonly class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            
        </form>
    </div>
</div>
